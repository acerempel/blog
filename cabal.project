packages:
    blog.cabal
    server/blog-server.cabal
    mmark/mmark.cabal
library-profiling: False

package blog
    ghc-options: -fhide-source-paths -Wall -Wincomplete-record-updates -Wmissing-exported-signatures
    optimization: 2

package mmark
